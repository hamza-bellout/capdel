{#
/**
 * @file
 * Theme override for a 'radios' #type form element.
 *
 * Available variables
 * - attributes: A list of HTML attributes for the wrapper element.
 * - children: The rendered radios.
 *
 * @see template_preprocess_radios()
 */
#}
{% if url('<current>')['#markup'] matches '/.*profileedit.*/' %}
  <div class="btn-group-sm btn-group-toggle mt-2" data-toggle="buttons">{{ children }}</div>
{% else %}
  <div{{ attributes.addClass('radio') }}>{{ children }}</div>
{% endif %}
